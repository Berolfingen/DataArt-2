<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/LinearLayout1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="4dp"
              android:orientation="vertical"
              android:weightSum="1"
              android:gravity="center_horizontal|fill"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" android:gravity="center_horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal|fill">

        </LinearLayout>
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_color"
                android:text="TITLE"
                android:gravity="center_horizontal"
                android:textStyle="bold" android:textSize="20dp"/>


    </LinearLayout>

    <ImageView
            android:id="@+id/photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/original_akrobaty"
            android:adjustViewBounds="true"
            />

    <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:adjustViewBounds="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:id="@+id/date" android:layout_weight="0.04" android:layout_gravity="right"
            android:textSize="14dp"
            android:textColor="@color/date"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/details"
            android:id="@+id/url"
            android:textColor="@color/read_more"
            android:textSize="18dp"
            android:textStyle="bold" android:layout_gravity="right"
            android:paddingBottom="3dp"/>
    <View
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:background="#000000"/>


</LinearLayout>